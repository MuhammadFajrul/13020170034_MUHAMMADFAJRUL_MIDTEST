<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_blue_dark"
        app:titleTextColor="@android:color/white"
        style="@style/Theme.AppCompat.Light.DarkActionBar"
        >

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fotojudul"
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/thewalkingdead" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Walking Dead"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="17dp"/>
            <TextView
                android:id="@+id/genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="action || adventure || survival"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 episode"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/sutradara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muhammad Fajrul"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/terbit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2016"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Walking Dead adalah tv series bertemakan zombie terbaik Hollywood yang tidak boleh kamu lewatkan.Tv series ini berkisah tentang dunia yang sudah hancur akibat merebaknya wabah zombie. Sehingga membuat sekelompok manusia harus bertahan hidup dengan susah payah sekaligus mempertahankan diri dari serangan zombie yang siap menerkam mereka kapan saja.Cerita yang menakutkan sekaligus kompleks dari The Walking Dead menjadi nilai plus yang tidak bisa dipandang dengan sebelah mata. Selain itu, salah satu tv series terbaik ini juga menyelipkan adegan drama, bahkan romantis di dalamnya. Sehingga membuat tv series yang diperankan oleh Norman Reedus, Andrew Lincoln, dan Lauren Cohan menjadi tv series yang lengkap."
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cast and Crew"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>